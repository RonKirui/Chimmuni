<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:background="@color/aliceblue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="1dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/immun1"
                    android:textSize="12sp"
                    android:text="BCG/OPV/HEP.B"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date1"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status1"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/immun2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="DPT/HIB/OPV/HEP.B/PNEUMOCOCCCAL/ROTAVIRUS"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date2"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status2"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/immun3"
                    android:textSize="12sp"
                    android:text="DPT/HIB/OPV/HEP.B/PNEUMOCOCCCAL/ROTAVIRUS" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date3"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status3"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/immun4"
                    android:textSize="12sp"
                    android:text="DPT/HIB/OPV/HEP.B/PNEUMOCOCCCAL/ROTAVIRUS"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date4"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status4"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/immun5"
                    android:textSize="12sp"
                    android:text="VIT A"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date5"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status5"
                    android:layout_marginLeft="12dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/immun6"
                    android:textSize="12sp"
                    android:text="MEASLES/YELLOW FEVER" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/date6"
                    android:textSize="15sp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status6"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>